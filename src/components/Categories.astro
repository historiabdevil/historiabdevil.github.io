---
import {getCategories} from '@/utils'
import Category from '@/components/Category'
import type {CategoryInfo} from "../utils/post";

const categoryInfos = await getCategories()
const {activeCategory} = Astro.props
---

<div class='relative flex flex-wrap min-w-full gap-5'>
    {
        categoryInfos.map((item: CategoryInfo) => (
                <Category name={item.name} count={item.count} activeCategory={activeCategory}/>
        ))
    }

    <div class='hidden sm:block absolute w-full bottom-0 border-b-2 -z-40 dark:border-gray-600'></div>
</div>