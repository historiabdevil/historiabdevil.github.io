---
import FormattedDate from "./FormattedDate.astro";
const {title, description, heroImage, slug, pubDate} = Astro.props
---

<div class="sm:basis-1/2 md:basis-1/3 lg:basis-1/4 xl:basis-1/5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href=`/blog/${slug}`>
        <img class="rounded-t-lg" src=`${heroImage ?? '/images/logo.webp'}` alt="" />
    </a>
    <div class="p-5">
        <a href=`/blog/${slug}`>
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
        <FormattedDate date={pubDate}/>
    </div>
</div>
